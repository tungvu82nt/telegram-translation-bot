# Telegram Bot Configuration (Cấu hình Bot Telegram)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# OpenAI Configuration (Cấu hình OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# GLM Configuration (Cấu hình GLM)
GLM_API_KEY=your_glm_api_key_here
GLM_MODEL=glm-4

# Cerebras Configuration (Cấu hình Cerebras)
CEREBRAS_API_KEY=your_cerebras_api_key_here
CEREBRAS_MODEL=llama3.1-8b

# Bot Settings (Cài đặt Bot)
DEFAULT_TRANSLATOR=openai
MAX_MESSAGE_LENGTH=4000
LOG_LEVEL=INFO

# Webhook Configuration (Cấu hình Webhook) - Chỉ cần khi deploy
# WEBHOOK_URL=https://your-app-domain.com/webhook
# PORT=8000

# Database Configuration (Cấu hình Database) - Tùy chọn
# DATABASE_URL=your_database_url_here